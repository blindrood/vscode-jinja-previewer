{
  "name": "jinjer",
  "displayName": "jinjer",
  "description": "Jinja2 Previewer",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "publisher": "PSSolutions",
  "repository": {
    "type": "git",
    "url": "https://github.com/blindrood/vscode-jinja-previewer.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "jinjer.preview",
        "title": "jinjaPreview"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Jinjer",
      "properties": {
        "jinjer.contextFile": {
          "type": "string",
          "default": ".jinjer.json",
          "description": "Relative path (from the active file folder) of the context file with variables. Supports JSON and YAML formats."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/nunjucks": "^3.2.6",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "nunjucks": "^3.2.4"
  }
}
